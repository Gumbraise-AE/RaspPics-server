{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <form method="post">
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <div class="container px-4 mx-auto pt-24 space-y-12 md:space-y-24 max-w-screen-md">
            <h1 class="text-3xl md:text-5xl font-extrabold pb-12 word-break text-center md:text-left">Log in
                RaspPics</h1>
            <div class="text-black mx-auto space-y-5">
                <div class="w-full md:w-1/2 mx-auto">
                    <label for="inputEmail"
                           class="sr-only">Email</label>
                    <input type="email"
                           placeholder="Email"
                           value="{{ last_username }}"
                           name="email"
                           id="inputEmail"
                           class="w-full rounded-full p-4 outline-none font-bold text-center bg-white"
                           autocomplete="email"
                           required
                           autofocus
                    >
                </div>
                <div class="w-full md:w-1/2 mx-auto">
                    <label for="inputPassword"
                           class="sr-only">Password</label>
                    <input type="password"
                           placeholder="Password"
                           name="password"
                           id="inputPassword"
                           class="w-full rounded-full p-4 outline-none font-bold text-center bg-white"
                           autocomplete="current-password"
                           required
                    >
                </div>
                <div class="w-full md:w-1/2 mx-auto">
                    <button type="submit"
                            class="w-full rounded-full p-4 outline-none font-bold text-center bg-white">
                        Confirmer
                    </button>
                </div>
                {% if error %}
                    <div class="w-full md:w-1/2 mx-auto">
                        <p class="text-xs text-red-600">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </form>
{% endblock %}
